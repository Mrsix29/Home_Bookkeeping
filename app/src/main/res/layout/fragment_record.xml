<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <RelativeLayout
        android:id="@+id/fragment_record_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:padding="10dp">
        <ImageView
            android:id="@+id/fragment_record_image_view"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_others_fs"/>
        <TextView
            android:id="@+id/fragment_record_text_view_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other"
            android:layout_toRightOf="@id/fragment_record_image_view"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/fragment_record_edit_text_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:inputType="number"
            android:background="@null"
            android:textColor="@color/chart_view"
          />
    </RelativeLayout>
    <View
        android:id="@+id/fragment_record_dividend_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fragment_record_tab"
        android:background="@color/income"/>
    <GridView
        android:id="@+id/fragment_record_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_record_dividend_line"
        android:background="@color/background_color"
        android:numColumns="5"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    <android.inputmethodservice.KeyboardView
        android:id="@+id/fragment_record_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:keyBackground="@color/background_color_monthly_summary"
        android:keyTextColor="@color/record_btn"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="1dp"
        android:layout_alignParentBottom="true"
        android:shadowColor="@color/white"
        android:shadowRadius="0.0"/>
    <RelativeLayout
        android:layout_above="@id/fragment_record_keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/fragment_record_text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021-4-3 18:49"
            android:layout_alignParentRight="true"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/fragment_record_text_view_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Note"
            android:layout_toLeftOf="@id/fragment_record_text_view_time"
            android:padding="10dp"/>
    </RelativeLayout>

</RelativeLayout>